<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.activities.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="200dp"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/quickbrew_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/broeg_whitelogo" />

    <Button
        android:id="@+id/quickbrew_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:background="@drawable/rectanglebroeg_button"
        android:fontFamily="@font/geo"
        android:text="Quick Brew"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/broeg_frontpagebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/myrecipes_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/rectanglebroeg_button"
        android:fontFamily="@font/geo"
        android:text="My Recipes"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/broeg_frontpagebutton" />

    <Button
        android:id="@+id/broeg_frontpagebutton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectanglebroeg_button"
        android:fontFamily="@font/geo"
        android:text="New Recipe"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/myrecipes_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickbrew_button" />

</androidx.constraintlayout.widget.ConstraintLayout>