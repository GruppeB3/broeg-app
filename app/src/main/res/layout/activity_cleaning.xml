<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button2"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:background="@drawable/cleaning_button"
        tools:layout_editor_absoluteX="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
            />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="264dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteX="73dp"
        app:layout_constraintBottom_toTopOf="@+id/cleaning_start_button"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/cleaning_start_button"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:background="@drawable/startknap_button"
        app:layout_constraintBottom_toTopOf="@id/cleaning_cancel_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/cleaning_cancel_button"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:background="@drawable/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="584dp" />
</androidx.constraintlayout.widget.ConstraintLayout>