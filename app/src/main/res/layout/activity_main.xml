<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_brown"
        tools:context="views.activities.MainActivity">

    <Button
            android:id="@+id/broeg_frontpagebutton"
            android:layout_width="100dp"
            android:layout_height="51dp"
            android:background="@drawable/broeg_frontpagebutton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"
            tools:layout_editor_absoluteY="144dp"
            tools:layout_editor_absoluteX="156dp" />

    <Button
            android:id="@+id/cleaning_button"
            android:layout_width="145dp"
            android:layout_height="43dp"
            android:background="@drawable/cleaning_button"
            app:layout_constraintTop_toBottomOf="@id/button4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteY="410dp"
            tools:layout_editor_absoluteX="133dp" />

    <Button
            android:id="@+id/myrecipes_button"
            android:layout_width="240dp"
            android:layout_height="47dp"
            android:background="@drawable/recipes_button"
            app:layout_constraintTop_toBottomOf="@id/broeg_frontpagebutton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteY="232dp"
            tools:layout_editor_absoluteX="86dp" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="77dp"
            android:layout_height="190dp"
            app:srcCompat="@drawable/broeg_whitelogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cleaning_button"
            android:layout_marginTop="40dp"
            tools:layout_editor_absoluteY="540dp"
            tools:layout_editor_absoluteX="167dp" />

    <Button
            android:id="@+id/button4"
            android:layout_width="145dp"
            android:layout_height="47dp"
            android:background="@drawable/myprofile_button"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/myrecipes_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="316dp"
            tools:layout_editor_absoluteX="133dp" />

    <Button
            android:id="@+id/button5"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:background="@drawable/menuicon_button"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            tools:visibility="visible"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="16dp" />

    <Button
            android:id="@+id/button7"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:background="@drawable/broegblack_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="194dp" />

    <Button
            android:id="@+id/button8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/homebutton_button"
            tools:layout_editor_absoluteX="186dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>