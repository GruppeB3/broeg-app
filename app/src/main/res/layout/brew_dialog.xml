<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_amountCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount of coffee"
        app:layout_constraintStart_toStartOf="@+id/dialog_name"
        app:layout_constraintTop_toBottomOf="@+id/dialog_name" />

    <TextView
        android:id="@+id/dialog_bloomTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="bloom time"
        app:layout_constraintStart_toStartOf="@+id/dialog_amountCoffee"
        app:layout_constraintTop_toBottomOf="@+id/dialog_amountCoffee" />

    <TextView
        android:id="@+id/dialog_bloomWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bloom water"
        app:layout_constraintStart_toStartOf="@+id/dialog_bloomTime"
        app:layout_constraintTop_toBottomOf="@+id/dialog_bloomTime" />

    <TextView
        android:id="@+id/dialog_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="brewing temperature"
        app:layout_constraintStart_toStartOf="@+id/dialog_bloomWater"
        app:layout_constraintTop_toBottomOf="@+id/dialog_bloomWater" />

    <TextView
        android:id="@+id/dialog_grindSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="grind size"
        app:layout_constraintStart_toStartOf="@+id/dialog_temperature"
        app:layout_constraintTop_toBottomOf="@+id/dialog_temperature" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="name of brew"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>