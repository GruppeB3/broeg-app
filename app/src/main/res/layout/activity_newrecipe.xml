<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.activities.NewRecipeActivity">

    <ImageView
            android:id="@+id/groundCoffeeAmtBackground"
            android:layout_width="335dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rectanglebroeg_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="51dp" />

    <ImageView
        android:id="@+id/bloomTimeBackground"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bloomWaterBackground"
        app:srcCompat="@drawable/rectanglebroeg_button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="420dp" />

    <ImageView
        android:id="@+id/brewingTempBackground"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grindSizeBackground"
        app:srcCompat="@drawable/rectanglebroeg_button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="238dp" />

    <ImageView
        android:id="@+id/bloomWaterBackground"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brewingTempBackground"
        app:srcCompat="@drawable/rectanglebroeg_button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="329dp" />

    <ImageView
        android:id="@+id/grindSizeBackground"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groundCoffeeAmtBackground"
        app:srcCompat="@drawable/rectanglebroeg_button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="143dp" />

    <ImageView
            android:id="@+id/coffeeWaterRatioBackground"
            android:layout_width="335dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rectanglebroeg_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bloomTimeBackground"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="51dp" />

    <ImageView
            android:id="@+id/totalBrewTimeBackground"
            android:layout_width="335dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rectanglebroeg_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coffeeWaterRatioBackground"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="51dp" />

    <Button
        android:id="@+id/groundCoffeAmtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/ground_coffee_amount"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/groundCoffeeAmtBackground"
        app:layout_constraintLeft_toLeftOf="@id/groundCoffeeAmtBackground"
        app:layout_constraintRight_toRightOf="@id/groundCoffeeAmtBackground"
        app:layout_constraintTop_toTopOf="@id/groundCoffeeAmtBackground" />

    <Button
        android:id="@+id/grindSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/grind_size"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/grindSizeBackground"
        app:layout_constraintLeft_toLeftOf="@id/grindSizeBackground"
        app:layout_constraintRight_toRightOf="@id/grindSizeBackground"
        app:layout_constraintTop_toTopOf="@id/grindSizeBackground" />

    <Button
        android:id="@+id/brewingTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/brewing_temperature"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/brewingTempBackground"
        app:layout_constraintLeft_toLeftOf="@id/brewingTempBackground"
        app:layout_constraintRight_toRightOf="@id/brewingTempBackground"
        app:layout_constraintTop_toTopOf="@id/brewingTempBackground" />

    <Button
        android:id="@+id/bloomWaterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/bloom_water_amount"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/bloomWaterBackground"
        app:layout_constraintLeft_toLeftOf="@id/bloomWaterBackground"
        app:layout_constraintRight_toRightOf="@id/bloomWaterBackground"
        app:layout_constraintTop_toTopOf="@id/bloomWaterBackground" />

    <Button
        android:id="@+id/bloomTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/bloom_time"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/bloomTimeBackground"
        app:layout_constraintLeft_toLeftOf="@id/bloomTimeBackground"
        app:layout_constraintRight_toRightOf="@id/bloomTimeBackground"
        app:layout_constraintTop_toTopOf="@id/bloomTimeBackground" />

    <Button
        android:id="@+id/coffeeWaterRatioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/coffee_water_ratio"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/coffeeWaterRatioBackground"
        app:layout_constraintLeft_toLeftOf="@id/coffeeWaterRatioBackground"
        app:layout_constraintRight_toRightOf="@id/coffeeWaterRatioBackground"
        app:layout_constraintTop_toTopOf="@id/coffeeWaterRatioBackground" />

    <Button
        android:id="@+id/totalBrewTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/total_brew_time"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/totalBrewTimeBackground"
        app:layout_constraintLeft_toLeftOf="@id/totalBrewTimeBackground"
        app:layout_constraintRight_toRightOf="@id/totalBrewTimeBackground"
        app:layout_constraintTop_toTopOf="@id/totalBrewTimeBackground" />

    <!--
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="169dp"
        android:layout_height="166dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="523dp" />
    -->

    <Button
        android:id="@+id/saveButton"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:background="@drawable/s2saveknap_button"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalBrewTimeBackground" />

    <LinearLayout
            android:id="@+id/fragment_contents"
            android:orientation="horizontal"
            android:elevation="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="454dp" />
</androidx.constraintlayout.widget.ConstraintLayout>