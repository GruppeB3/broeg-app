<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="models.NewBrew">

    <Button
        android:id="@+id/GroundCoffeeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="92dp"
        android:text="Ground Coffee Amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GrindSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="GrindSize"
        app:layout_constraintStart_toStartOf="@+id/GroundCoffeeAmount"
        app:layout_constraintTop_toBottomOf="@+id/GroundCoffeeAmount" />

    <Button
        android:id="@+id/BrewingTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="BrewingTemperature"
        app:layout_constraintEnd_toEndOf="@+id/GroundCoffeeAmount"
        app:layout_constraintTop_toBottomOf="@+id/GrindSize" />

    <Button
        android:id="@+id/BloomWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:text="BloomWater"
        app:layout_constraintEnd_toEndOf="@+id/BrewingTemperature"
        app:layout_constraintTop_toBottomOf="@+id/BrewingTemperature" />

    <Button
        android:id="@+id/BloomTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:text="BloomTime"
        app:layout_constraintEnd_toEndOf="@+id/BloomWater"
        app:layout_constraintTop_toBottomOf="@+id/BloomWater" />

    <Button
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginBottom="64dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/fragmentindhold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>