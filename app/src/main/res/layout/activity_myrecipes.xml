<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_brown"
    tools:context="views.activities.MyRecipesActivity">

    <ImageView
            android:id="@+id/myreceipes_Burger_Menu_Icon"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:src="@drawable/menuicon_button"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="15dp" />

    <ImageView
            android:id="@+id/myrecipes_Broeg_Logo"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:src="@drawable/broegblack"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/myrecipes_Headline"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myrecipes_Broeg_Logo"
            app:srcCompat="@drawable/myrecipes" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/myrecipes_Headline"
            android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>