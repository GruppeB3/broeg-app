<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="views.activities.MainActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="136dp"
            android:layout_height="294dp"
            android:layout_marginTop="129dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/broeg_frontpagebutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/broeg_whitelogo" />

    <Button
        android:id="@+id/broeg_frontpagebutton"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/broeg_frontpagebutton"
        app:layout_constraintBottom_toTopOf="@+id/myrecipes_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/myrecipes_button"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/recipes_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>